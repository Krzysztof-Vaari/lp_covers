<p id="notice"><%= notice %></p>
<div class = "panel panel-default">
  <div class = "panel-body"
    <div id="covers" class="transitions-enabled">
       <% @covers.each do |cover| %>
        <div class="box">
          <div class="panel panel-default">
            <%= link_to image_tag(cover.image.url(:medium)), cover %>
            <div class="panel-body">
            <%= cover.description %><br/>
            <br/><strong><%= cover.user.name if cover.user %></strong>
            <br/>
            </div>
            <% if cover.user == current_user %>
            <div class="panel-footer">
            <%= link_to 'Edycja', edit_cover_path(cover) %><br/>
            <%= link_to 'Usuwanie', cover, method: :delete, data: { confirm: 'Na pewno?' } %><br/>
          </div>
            <%end%>
          </div>
          </div>
        <% end %>
    </div>
  </div>
  <div class = "panel-footer">
    <div class= "center">
      <%= will_paginate @covers, renderer: BootstrapPagination::Rails %>
    </div>
  </div>
</div>
